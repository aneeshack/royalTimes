	<script>
		document.addEventListener('DOMContentLoaded', function () {
			const brandFilterForm = document.getElementById('brandFilterForm');
			
			brandFilterForm.addEventListener('change', function (e) {
				const selectedBrandId = brandFilterForm.querySelector('input[name="brand"]:checked').value;
				
				fetch(`user/api/products?brand=${selectedBrandId}`)
					.then(response => response.json())
					.then(data => {
						const productContainer = document.getElementById('productContainer');
						productContainer.innerHTML = ''; // Clear the container
						
						if (Array.isArray(data.products) && data.products.length > 0) {
							data.products.forEach(product => {
								const productCard = `
									<div class="col-md-4 mb-4">
										<div class="card h-100 product-card">
											<a href="/user/product/${product._id}"> <!-- Link to product details page -->
												<img src="${product.images[0]}" class="card-img-top" alt="${product.productName}" data-product-id="${product._id}">
											</a>
											<div class="card-body">
												<h5 class="card-title">${product.productName}</h5>
												<p class="card-text">Price: $${product.price}</p>
												<a href="#" class="btn btn-primary">Add to Cart</a>
											</div>
										</div>
									</div>`;
								productContainer.innerHTML += productCard;
							});
						} else {
							productContainer.innerHTML = '<p>No products found.</p>';
						}
					})
					.catch(error => console.error('Error fetching products:', error));
			});
		});
