<script src="https://cdn.tailwindcss.com"></script>
<script>
    tailwind.config = {
        theme: {
            extend: {
                fontFamily: {
                    inter: ['Inter', 'sans-serif'],
                },
            },
        },
    };
</script>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const timerDisplay = document.getElementById('timerDisplay');
        let timeLeft = 120; // 2 minutes in seconds
        let timerInterval;

        // Function to format seconds to mm:ss format
        const formatTime = (time) => {
            const minutes = Math.floor(time / 60);
            const seconds = time % 60;
            return `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        };

        // Function to update the timer display
        const updateTimer = () => {
            timerDisplay.textContent = formatTime(timeLeft);
        };

        // Function to start the timer
        const startTimer = () => {
            timeLeft = 120; // Reset time to 2 minutes
            updateTimer();
            timerInterval = setInterval(() => {
                timeLeft--;
                updateTimer();
                if (timeLeft === 0) {
                    clearInterval(timerInterval);
                    // Display "Resend OTP" message or perform resend OTP action here
                    document.getElementById('timer').textContent = 'Timer: Resend OTP';
                }
            }, 1000); // Update every second
        };

        // Start the timer when the page loads
        startTimer();

        // Event listener for the "Resend OTP" button
        document.getElementById('resendOtpBtn').addEventListener('click', () => {
            clearInterval(timerInterval); // Stop the current timer
            startTimer(); // Start a new timer
        });
    });
</script>

<script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
<script src="/script/home.js"></script>
